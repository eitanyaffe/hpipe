#!/usr/bin/env perl

use strict;
use POSIX;
use warnings FATAL => qw(all);
use File::Basename;
use Getopt::Long;
use Env;

if ($#ARGV == -1) {
	print STDERR "usage: $0 <command> [options]\n";
	print STDERR "command options: \n";
	print STDERR "  start: start hpipe container\n";
	print STDERR "  stop: stop hpipe container\n";
	print STDERR "  restart: stop and start hpipe container\n";
	print STDERR "  run: execute step\n";
	print STDERR "  status: check status of docker container\n";
	print STDERR "  print: convert hpipe name to filename\n";
	print STDERR "  dry: show which targets will be generated if step is executed\n";
	print STDERR "options\n";
	print STDERR " -c: config file\n";
	print STDERR " -s: step\n";
	exit 1;
}

my $command = $ARGV[0];
my $cfg = defined($ENV{HPIPE_CONFIG}) ? $ENV{HPIPE_CONFIG} : "config/template/basic.cfg";
my $step = defined($ENV{HPIPE_STEP}) ? $ENV{HPIPE_STEP} : "pp_basic";
my $name = "CONTIG_TABLE";
my $image = "hpipe";

$command eq "start" || $command eq "stop" || $command eq "restart" || $command eq "status" || $command eq "print" || $command eq "run" || $command eq "dry" || $command eq "debug" || die "unknown command: $command";

GetOptions (
    "c=s" => \$cfg,
    "v=s" => \$name,
    "s=s" => \$step);

my $dir = dirname($cfg);
my $fn = basename($cfg);
print "config file: $cfg\n";

if ($command eq "start") {
    msystem("bash ./docker/scripts/drun.sh $dir $image");
}

if ($command eq "stop") {
    msystem("bash ./docker/scripts/dremove.sh $dir");
}

if ($command eq "restart") {
    msystem("bash ./docker/scripts/dremove.sh $dir");
    msystem("bash ./docker/scripts/drun.sh $dir $image");
}

if ($command eq "run") {
    print "step: $step\n";
    msystem("bash ./docker/scripts/dexec.sh $dir make c=config/$fn $step");
}

if ($command eq "print") {
    print "name: $name\n";
    msystem("bash ./docker/scripts/dexec.sh $dir make c=config/$fn t=print v=$name | grep '^v='");
}

if ($command eq "dry") {
    print "step: $step\n";
    msystem("bash ./docker/scripts/dexec.sh $dir make c=config/$fn $step -n | grep START");
}

if ($command eq "debug") {
    msystem("bash ./docker/scripts/dexec.sh $dir bash");
}

if ($command eq "status") {
    msystem("bash ./docker/scripts/dstatus.sh $dir");
}

sub msystem {
    my $cmd = shift;
    print "# $cmd\n";
    my $rc = system($cmd);
    $rc == 0 or die $rc;
}
